<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/device_menu_root_view"
        android:layout_width="@dimen/root_layout_size"
        android:layout_height="@dimen/root_layout_size"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_root_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/device_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/parent_1_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/btn_4_device"
                app:layout_constraintEnd_toStartOf="@+id/btn_4_device"
                app:layout_constraintStart_toEndOf="@+id/parent_3_device"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.222">
                <ImageButton
                    android:id="@+id/btn_1_device"
                    android:layout_width="@dimen/layout_btn_size2"
                    android:layout_height="@dimen/layout_btn_size2"
                    android:scaleType="fitCenter"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_baseline_lock_24"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/text_1_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lock_nscreen"
                    android:textAlignment="center"
                    android:textColor="@color/white_3"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/btn_1_device"/>
            </RelativeLayout>

           <RelativeLayout
               android:id="@+id/parent_2_device"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toTopOf="@+id/btn_4_device"
               app:layout_constraintEnd_toStartOf="@+id/parent_5_device"
               app:layout_constraintStart_toEndOf="@+id/btn_4_device"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.222">
               <ImageButton
                   android:id="@+id/btn_2_device"
                   android:layout_width="@dimen/layout_btn_size2"
                   android:layout_height="@dimen/layout_btn_size2"
                   android:background="@android:color/transparent"
                   android:scaleType="fitCenter"
                   android:scaleX="0.7"
                   android:scaleY="0.7"
                   android:src="@drawable/ic_baseline_power_settings_new_24"
                   android:layout_centerHorizontal="true"
                   tools:ignore="ContentDescription" />
               <TextView
                   android:id="@+id/text_2_device"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/power"
                   android:textAlignment="center"
                   android:textColor="@color/white_3"
                   android:textSize="12sp"
                   android:layout_centerHorizontal="true"
                   android:layout_below="@+id/btn_2_device"/>
           </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_3_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_4_device"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageButton
                    android:id="@+id/btn_3_device"
                    android:layout_width="@dimen/layout_btn_size2"
                    android:layout_height="@dimen/layout_btn_size2"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:padding="5dp"
                    android:src="@drawable/ic_volume_up_white"
                    android:layout_centerHorizontal="true"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/text_3_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="56dp"
                    android:text="@string/volume_nup"
                    android:textAlignment="center"
                    android:textColor="@color/white_3"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/btn_3_device"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_5_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.777"
                app:layout_constraintStart_toEndOf="@+id/btn_4_device"
                app:layout_constraintTop_toTopOf="parent">
                <ImageButton
                    android:id="@+id/btn_5_device"
                    android:layout_width="@dimen/layout_btn_size2"
                    android:layout_height="@dimen/layout_btn_size2"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/orientation_default_white"
                    android:layout_centerHorizontal="true"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/text_5_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white_3"
                    android:textSize="12sp"
                    android:layout_below="@id/btn_5_device"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_6_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_4_device"
                app:layout_constraintStart_toEndOf="@+id/parent_3_device"
                app:layout_constraintTop_toBottomOf="@+id/btn_4_device"
                app:layout_constraintVertical_bias="0.43">
                <ImageButton
                    android:id="@+id/btn_6_device"
                    android:layout_width="@dimen/layout_btn_size2"
                    android:layout_height="@dimen/layout_btn_size2"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_volume_down_white"
                    android:layout_centerHorizontal="true"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/text_6_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volume_ndown"
                    android:textAlignment="center"
                    android:textColor="@color/white_3"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/btn_6_device"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_7_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/parent_5_device"
                app:layout_constraintStart_toEndOf="@+id/btn_4_device"
                app:layout_constraintTop_toBottomOf="@+id/btn_4_device"
                app:layout_constraintVertical_bias="0.43">
                <ImageButton
                    android:id="@+id/btn_7_device"
                    android:layout_width="@dimen/layout_btn_size2"
                    android:layout_height="@dimen/layout_btn_size2"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_baseline_more_horiz_24"
                    android:layout_centerHorizontal="true"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/text_7_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    android:textAlignment="center"
                    android:textColor="@color/white_3"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/btn_7_device"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/btn_4_device"
                android:layout_width="@dimen/layout_btn_size2"
                android:layout_height="@dimen/layout_btn_size2"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/device_sub_view"
            layout="@layout/service_device_sub_layou"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>