<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/installedAppList_Icon"
        android:layout_width="@dimen/sub_iconSize"
        android:layout_height="@dimen/sub_iconSize"
        tools:ignore="ContentDescription"
        android:background="@drawable/search_view_bg"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/installedAppList_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/silver"
        android:textSize="@dimen/sub_labelSize"
        android:layout_below="@id/installedAppList_Icon"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"/>

</RelativeLayout>